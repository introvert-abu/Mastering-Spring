<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="carSpecification" class="com.simple.com.constructor.injection.Specification">
        <property name="make" value="Toyota"></property>
        <property name="model" value="Corolla"></property>
    </bean>

    <bean id="myCar" class="com.simple.com.constructor.injection.Car">
        <constructor-arg ref="carSpecification"></constructor-arg>
    </bean>

</beans>