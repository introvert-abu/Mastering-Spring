<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="Specification" class="com.simple.com.autowire.example.withname.Specification">
        <property name="make" value="Toyota"></property>
        <property name="model" value="Corolla"></property>
    </bean>

    <bean id="myCar" class="com.simple.com.autowire.example.withname.Car" autowire="byName" />

</beans>