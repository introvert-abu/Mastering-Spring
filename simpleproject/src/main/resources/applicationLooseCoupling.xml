<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="data" class="com.simple.com.loose.coupling.Data">
    </bean>

    <bean id="data2" class="com.simple.com.loose.coupling.Data">
    </bean>

    <bean id="db1" class="com.simple.com.loose.coupling.Database1">
        <constructor-arg ref="data"></constructor-arg>
    </bean>

    <bean id="db2" class="com.simple.com.loose.coupling.Database2">
        <constructor-arg ref="data2"></constructor-arg>
    </bean>

</beans>